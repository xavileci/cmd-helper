[MAIN]
# Use multiple processes to speed up Pylint.
jobs=1

# Python code to execute, usually for sys.path manipulation such as
# pygtk.require().
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
# Disable the message, report, category or checker with the given id(s).
disable=
    # Design warnings that are acceptable for this project
    too-few-public-methods,     # R0903: Configuration and utility classes are fine with few methods
    too-many-branches,          # R0912: Complex parsing methods may need many branches
    
    # Global statement usage for singleton pattern
    global-statement,           # W0603: Needed for translator singleton pattern
    
    # Broad exception handling for robustness
    broad-exception-caught,     # W0718: Appropriate for API error handling
    
    # Deprecated method warnings (for future compatibility)
    deprecated-method,          # W4902: getdefaultlocale still works but will be deprecated

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

[DESIGN]
# Maximum number of arguments for function / method.
max-args=7

# Maximum number of attributes for a class (see R0902).
max-attributes=10

# Maximum number of boolean expressions in an if statement.
max-bool-expr=5

# Maximum number of branch for function / method body.
max-branches=15

# Maximum number of locals for function / method body.
max-locals=20

# Maximum number of parents for a class (see R0901).
max-parents=7

# Maximum number of public methods for a class (see R0904).
max-public-methods=25

# Maximum number of return statements in function / method body.
max-returns=6

# Maximum number of statements in function / method body.
max-statements=50

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=4

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Ignore imports when computing similarities.
ignore-imports=no
